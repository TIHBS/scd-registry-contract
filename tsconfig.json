{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": { "@types/*": ["src/types/*"] },
    "baseUrl": "."
  },
  "include": ["src/**/*", "test/**/*", "tasks/**/*", "deploy/**/*", "scripts/**/*"],
  "files": ["./hardhat.config.ts"]
}
